			<option value="WV">West Virginia</option>
			<option value="WI">Wisconsin</option>
			<option value="WY">Wyoming</option>
		</select><br>
	<label for="zip">Zip Code: </label>
	    <input type="number" name="zip" id="zip"><br>
	<label for="date">Available: </label>
	    <select>
	    	<option value="true">yes</option>
	    	<option value="false">no</option>
	    </select>
	<label for="price">Price: </label>
 	    <input type="number" step="any" name="price" id="price"><br>
 	<label for="photo">Parking Spot Photo: </label>
 		<input type="file" name="spot_photo">
	
	<input type="submit" id="submit" value="Submit Spot">
   </fieldset>
</form>

<h1>Submitted Spots</h1>
<table id="spotTbl">
    <tr>
	<th style="display:none">ID</th>
	<th>Owner Name</th>
	<th>address</th>
	<th>city</th>
	<th>state</th>
	<th>zip</th>
	<th>Date</th>
	<th>price</th>
    </tr>
   {{#each spot}}
    <tr>
	<td style="display:none">{{this.id}}</td>
	<td>{{this.name}}</td>
	<td>{{this.address}}</td>
	<td>{{this.city}}</td>
	<td>{{this.state}}</td>
	<td>{{this.zip}}</td>
	<td>{{this.date}}</td>
	<td>{{this.price}}</td>
    	<td><a href="/add_spot?id={{this.id}}"><input type="button" value="Add")"></a></td>
    </tr>
    {{/each}}
</table>
<script src="/add_parking_script.js"></script>

